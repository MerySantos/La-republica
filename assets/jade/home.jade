                                p=description
                                img.d-ib(src="image/social_sprite.png")
                                img.d-ib(src="image/bullet.gif")
                                img.d-ib(src="image/ico_comment.png") 
                                p.d-ib=comment
                                img.d-ib(src="image/bullet.gif")
                                a.d-ib=seccion
                                img.d-ib(src="image/bullet.gif")
                                i.d-ib.fa&attributes(attributes)

                    H4 ULTIMAS NOTICIAS
                    i
                        img(src="image/double-arrow-bottom.png")
                    
