                        +list-news("Hace 1 hora 12 mins","Real Madrid: Cristiano Ronaldo fue sancionado con dos partidos y sí estará contra el Atletico de Madrid","image/img_news4.png","Despues de la pesima actitud de Cristiano Ronaldo, al agredir a Edimar en el partido de cuadro madrídista contra el Córdoba, el Comité de Competicion ha llegado a la ...","0","AREQUIPA")(class="D-NONE")
                    ul
                        +rep-list-news
                        +rep-list-news
                        +rep-list-news
                        +rep-list-news
                        +rep-list-news
                        +rep-list-news

                .col-md-4
                    //Declarar mixins ()
                    mixin trama(img_superior,titulo)
                        //tramas
                        .fondo-trama
                            img(src=img_superior)
                            .container-blanco
                                h3=titulo
                                if block
                                    block
                                else
                                    p a

                    mixin 4img_4p(img_superior,img_1,img_2,img_3,img_4,p_1,p_2,p_3,p_4,seccion)
                        //aweita
                        .row
                            img(src=img_superior)
                        .row
                            .col-md-5
                                img.img-responsive.img-100(src=img_1)
                            .col-md-7
                                p=p_1
                        .row
                            .col-md-5
                                img.img-responsive.img-100(src=img_2)
                            .col-md-7
                                p=p_2
                        .row
                            .col-md-5
                                img.img-responsive.img-100(src=img_3)
                            .col-md-7
                                p=p_3
                        .row
                            .col-md-5
                                img.img-responsive.img-100(src=img_4)
                            .col-md-7
                                p=p_4
                        .row
                            p Más en
                                a=seccion

                    mixin titulos(titulo)
                        // Titulos de secciones
                        .titulo
                            p=titulo
                    
                    mixin img_text_ab(img_fondo,texto_foto)
                        //Especiales  
                        .imagenes_text_ab
                            img(src=img_fondo)
                            p=texto_foto

                    mixin nuestros_blogueros(foto_bloguero,nombre_bloguero,ultimo_blog)
                        li
                            .row
                                .col-md-2
                                    img.img-100.img-responsive(src=foto_bloguero)
                                .col-md-10
                                    a=nombre_bloguero
                                    p=ultimo_blog

                    
                    // SUSCRIBETE BOLETIN (L)
                    +trama("image/img_sucribe.png","Suscribete a nuestro boletín")
                        input
                        button Suscribirse

                    //AWEITA
                    +4img_4p("image/logo_aweita.jpg","image/img_aweita.jpg","image/img_aweita.jpg","image/img_aweita.jpg","image/img_aweita.jpg","Juan Roman Riquelme el adios al 'Ultimo 10' de Argentina","dsjbfkjdsbfjksdbfjks","dsjbfkjdsbfjksdbfjks","dsjbfkjdsbfjksdbfjks","Aweita.pe")

                    // FOTOS DESTACADAS
                    +titulos("COLUMNISTAS")
                    .img-destacadas
                        img(src="image/img_fotodes_prominent.jpg")
                        H3 Líneas de Nasca:admiten prisión preventiva de 6 meses para activista de Greenpeace | FOTOS
                        .row
                            .col-md-5
                                img(src="image/img_fotodes.jpg")
